.container
	.row
		.page-header
			h1 #{title}
			small 重度科幻迷
.navbar.navbar-default.navbar-fixed-bottom
	.container
		.navbar-header
			a.navbar-brand(href="/") 重度科幻迷
		if user
			p.navbar-text.navbar-right
				span 欢迎您,#{user.name}
				span &nbsp;|&nbsp;
				a.navbar-link(href="/logout") 登出
		else
			p.navbar-text.navbar-right
				a.navbar-link(href="#", data-toggle="modal", data-target="#singupModal") 注册
				span &nbsp;|&nbsp;
				a.navbar-link(href="#", data-toggle="modal", data-target="#singinModal") 登录
#singupModal.modal.fade
	.modal-dailog.modal-lg
		.modal-content
			form(method="POST", action="/user/signup")
				.modal-header 注册
				.modal-body
					.form-group
						label(for="singupName") 用户名
						input#singupName.form-control(name="user[name]", type="text")
					.form-group
						label(for="singupPassword") 密码
						input#singupPassword.form-control(name="user[password]", type="text")
				.modal-footer
					button.btn.btn-default(type="button", data-dismiss="modal") 关闭
					button.btn.btn-success(type="submit") 提交
#singinModal.modal.fade
	.modal-dailog.modal-sm
		.modal-content
			form(method="POST", action="/user/signin")
				.modal-header 登录
				.modal-body
					.form-group
						label(for="singinName") 用户名
						input#singupName.form-control(name="user[name]", type="text")
					.form-group
						label(for="singinPassword") 密码
						input#singupPassword.form-control(name="user[password]", type="text")
				.modal-footer
					button.btn.btn-default(type="button", data-dismiss="modal") 关闭
					button.btn.btn-success(type="submit") 提交